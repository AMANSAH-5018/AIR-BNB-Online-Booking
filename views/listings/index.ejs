    <style>
      #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
      }

      .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 1.5rem;
        opacity: 0.6;
      }

      .filter:hover {
        opacity: 1;
        cursor: pointer;
      }

      .filter p {
        font-size: 0.7rem;
      }

      .tax-info {
        display: none;
      }

      .tax-toggle {
        border: 0.3px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 0.5rem;
        display: flex;
        align-items: center;
        margin-top: 0.5rem;
