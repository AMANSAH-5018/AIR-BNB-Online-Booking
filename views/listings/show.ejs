<% layout ('/layouts/boilerplate') %>

  <body>

    <div class="row mt-3">
      <div class="col-8 offset-3">
        <h3>Listing Details :</h3>
      </div>

      <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text">
            <b>Title:</b>
            <%= listing.title %><br>
              <b>Price:</b> &#8377 <%= listing.price.toLocaleString("en-IN") %><br>
                <b>Location:</b>
                <%= listing.location %><br>
                  <b>Country:</b>
                  <%= listing.country %><br>
                    <b>Description:</b>
                    <%= listing.description %><br>
          </p>
        </div>
      </div>

      <!-- <ul>
        <li>Title: <%= listing.title %>
